{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strict": false,

    "types": ["node", "react", "react-dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
